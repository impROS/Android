<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:layout_anchorGravity="center">


    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/tmpPrg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:foregroundGravity="center"
        app:cpb_background_progressbar_color="@color/colorToolbar"
        app:cpb_background_progressbar_width="@dimen/backgroundProgressBarWidth"
        app:cpb_progressbar_color="@color/fbWhite"
        app:cpb_progressbar_width="@dimen/progressBarWidth" />

    <TextView
        android:id="@+id/tmpTxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/uzunyazi"
        android:textSize="18sp" />

</RelativeLayout>